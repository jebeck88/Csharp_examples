<Window x:Class="CodingChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CodingChallenge.ViewModels"
        xmlns:models="clr-namespace:CodingChallenge.Models"
        Title="Plan Checker - Coding Challenge" 
        Height="700" Width="950"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BaseBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Plan Checker" Style="{StaticResource HeaderText}"/>
            <TextBlock Text="Load a DICOM RT Plan file to run automated quality checks" 
                       Style="{StaticResource SubheaderText}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- File Selection -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding FilePath, Mode=OneWay}"
                     Style="{StaticResource PathTextBox}"/>

            <Button Grid.Column="1"
                    Content="Browse File"
                    Command="{Binding BrowseCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="12,0,0,0"/>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="2" Margin="0,0,0,16" 
              Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Pass Count -->
            <Border Grid.Column="0" Style="{StaticResource SummaryCard}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="{Binding PassCount}" 
                               Style="{StaticResource CountNumber}"
                               Foreground="{StaticResource GreenBrush}"/>
                    <TextBlock Text="PASSED" Style="{StaticResource CountLabel}"/>
                </StackPanel>
            </Border>

            <!-- Fail Count -->
            <Border Grid.Column="1" Style="{StaticResource SummaryCard}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="{Binding FailCount}" 
                               Style="{StaticResource CountNumber}"
                               Foreground="{StaticResource RedBrush}"/>
                    <TextBlock Text="FAILED" Style="{StaticResource CountLabel}"/>
                </StackPanel>
            </Border>

            <!-- Warning Count -->
            <Border Grid.Column="2" Style="{StaticResource SummaryCard}">
                <StackPanel>
                    <TextBlock Text="{Binding WarningCount}" 
                               Style="{StaticResource CountNumber}"
                               Foreground="{StaticResource YellowBrush}"/>
                    <TextBlock Text="WARNINGS" Style="{StaticResource CountLabel}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Check Results List -->
        <Border Grid.Row="3" 
                Background="{StaticResource MantelBrush}" 
                CornerRadius="10"
                Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding CheckResults}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CheckResultCard}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon -->
                                    <Border Grid.Column="0" 
                                            Width="40" Height="40" 
                                            CornerRadius="20"
                                            Margin="0,0,16,0"
                                            VerticalAlignment="Center">
                                        <Border.Background>
                                            <SolidColorBrush Color="{StaticResource CrustColor}"/>
                                        </Border.Background>
                                        <TextBlock Text="{Binding Status, Converter={StaticResource StatusToIcon}}"
                                                   Style="{StaticResource StatusIcon}"
                                                   Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"/>
                                    </Border>

                                    <!-- Check Details -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CheckName}" 
                                                   Style="{StaticResource CheckNameText}"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   Style="{StaticResource CheckDetailText}"
                                                   Margin="0,2,0,6"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Expected: " 
                                                       Style="{StaticResource CheckDetailText}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Expected}" 
                                                       Foreground="{StaticResource SubtextBrush}"
                                                       FontSize="12" FontWeight="SemiBold"
                                                       Margin="0,0,20,0"/>
                                            <TextBlock Grid.Column="2" Text="Actual: " 
                                                       Style="{StaticResource CheckDetailText}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Actual}" 
                                                       Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"
                                                       FontSize="12" FontWeight="SemiBold"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Status Text -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Status, Converter={StaticResource StatusToText}}"
                                               VerticalAlignment="Center"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" 
                Background="{StaticResource CrustBrush}" 
                Margin="0,16,0,0"
                Padding="12,10"
                CornerRadius="6">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="{StaticResource OverlayBrush}"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
